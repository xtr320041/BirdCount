<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nz.govt.doc.birdcount"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".BirdCountApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Splash"
            android:label="@string/app_name_short" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainMap"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".BirdCountHeader"
            android:label="@string/title_activity_bird_count_header" >
        </activity>
        <activity
            android:name=".BirdCountDetail"
            android:label="@string/title_activity_bird_count_detail" >
        </activity>
        <activity
            android:name=".BirdCountList"
            android:label="@string/title_activity_bird_count_list" >
        </activity>
        <activity
            android:name=".DataAdminMain"
            android:label="@string/title_activity_data_admin_main" >
        </activity>
        <activity
            android:name=".AdminObserver"
            android:label="@string/title_activity_admin_observer" >
        </activity>
        <activity
            android:name=".AdminStation"
            android:label="@string/title_activity_admin_station" >
        </activity>
        <activity
            android:name=".AdminBirdCount"
            android:label="@string/title_activity_admin_bird_count" >
        </activity>
        <activity
            android:name=".DataUpload"
            android:label="@string/title_activity_test_mail" >
        </activity>
    </application>

</manifest>
